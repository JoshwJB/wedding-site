generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          Int     @id @default(autoincrement())
  email       String  @unique
  name        String?
  extras      ExtraPerson[]
  rsvpCode    String
  attending   Boolean
  starter     String?
  mainCourse  String?
  desert      String?
  dietaryReqs String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ExtraPerson {
  id          Int       @id @default(autoincrement())
  name        String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  starter     String?
  mainCourse  String?
  desert      String?
  dietaryReqs String?
  addee       User?     @relation(fields: [addedBy], references: [id])
  addedBy     Int?
}